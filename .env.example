# Environment Configuration for RAG Document Query System
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=sqlite:///rag_system.db
# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Session Secret (change this to a random string in production)
SESSION_SECRET=your-super-secret-session-key-here

# API Keys
MISTRAL_API_KEY=your-mistral-api-key-here
API_BEARER_TOKEN=your-bearer-token-here

# Render Deployment Variables (if deploying to Render)
# These will be set in your Render dashboard
RENDER=true
PORT=10000